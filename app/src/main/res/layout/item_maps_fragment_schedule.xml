<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_group_item"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:background="@drawable/border_all_green">

                <com.android.mouj.view.ViewText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/base_white"
                    android:background="@color/base_green"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/map_fragment_schedule_item_month"/>

                <com.android.mouj.view.ViewText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp"
                    android:textColor="@color/base_green"
                    android:id="@+id/map_fragment_schedule_item_day"/>

                <com.android.mouj.view.ViewText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="@color/base_semi_black"
                    android:id="@+id/map_fragment_schedule_item_year"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.mouj.view.ViewText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/base_green"
                android:id="@+id/map_fragment_schedule_item_title"/>

            <com.android.mouj.view.ViewText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/base_semi_black"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/map_fragment_schedule_item_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.android.mouj.view.ViewText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/base_semi_black"
                    android:layout_marginBottom="5dp"
                    android:text="Lokasi :" />

                <com.android.mouj.view.ViewText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/base_semi_black"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/map_fragment_schedule_item_location"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:background="@drawable/v1_icon_home_time"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"/>

                <com.android.mouj.view.ViewText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/base_green"
                    android:id="@+id/map_fragment_schedule_item_time"/>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>