<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:paddingBottom="15dp">

    <com.android.mouj.view.ViewText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_green"
        android:id="@+id/base_dialog_title"
        android:textColor="@color/base_black"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" />

    <com.android.mouj.view.ViewText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/base_black"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:text=""
        android:id="@+id/base_dialog_message"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/base_dialog_fragment">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/base_dialog_container_button"
        android:layout_gravity="center">

        <com.android.mouj.view.ViewButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_green"
            android:id="@+id/base_dialog_cancel"
            android:textColor="@color/base_white"
            android:textSize="16sp"
            android:text="@string/base_string_cancel"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_marginRight="20dp" />

        <com.android.mouj.view.ViewButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_green"
            android:id="@+id/base_dialog_ok"
            android:textColor="@color/base_white"
            android:textSize="16sp"
            android:text="@string/base_string_ok"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/base_dialog_cancel" />
    </RelativeLayout>

</LinearLayout>