<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v1_home_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/main_relative_topbar"
        android:background="@drawable/main_topbar"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:id="@+id/main_imagebutton_menu"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/v1_icon_sidemenu_toggle"
            android:padding="10dp"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:id="@+id/main_imageview_logo"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/intro_logo"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:id="@+id/main_imagebutton_search"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/v1_icon_home_search"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="9dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/main_relative_topbar"
        android:layout_alignParentLeft="true"
        android:background="@color/base_green"
        android:id="@+id/main_second_menu_container">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:id="@+id/main_imagebutton_schedule"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/v1_icon_addtome"
            android:contentDescription="@string/app_name"
            android:padding="9dp"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:id="@+id/main_imagebutton_create"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/v1_icon_home_create_post"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:id="@+id/main_imagebutton_notification"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/v1_icon_home_notification"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="9dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_listview_post"
        android:layout_below="@+id/main_second_menu_container"
        android:layout_alignParentLeft="true"
        android:cacheColorHint="#00000000"
        android:divider="@color/v1_home_item_divider"
        android:dividerHeight="1dp"
        android:scrollbars="none"/>

</RelativeLayout>
