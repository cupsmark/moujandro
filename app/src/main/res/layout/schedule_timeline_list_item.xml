<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone"
        android:id="@+id/schedule_timeline_list_item_repost_container"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/v1_icon_home_repost_undo"
            android:layout_marginRight="10dp"/>

        <com.mouj.app.view.ViewText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_timeline_list_item_repost_value"
            android:textColor="@color/base_green"
            android:textSize="16sp"
            android:text=""
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center">

            <com.mouj.app.view.ViewText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_timeline_list_item_datenumber"
                android:textColor="@color/base_green"
                android:textSize="18sp"
                android:text="10"
                android:layout_gravity="center"/>

            <com.mouj.app.view.ViewText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_timeline_list_item_datename"
                android:textColor="@color/base_green"
                android:textSize="14sp"
                android:text="Rabu"
                android:gravity="top"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_green"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mouj.app.view.ViewText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/schedule_timeline_list_item_username"
                    android:textColor="@color/base_white"
                    android:textSize="16sp"
                    android:text="Ust Abu Salamah"
                    android:layout_gravity="left"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/schedule_timeline_list_item_time"/>

                <com.mouj.app.view.ViewText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/schedule_timeline_list_item_time"
                    android:textColor="@color/base_white"
                    android:textSize="14sp"
                    android:text="05:00 AM"
                    android:layout_gravity="left"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <com.mouj.app.view.ViewText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_timeline_list_item_desc"
                android:textColor="@color/base_white"
                android:textSize="14sp"
                android:text="lorem ipdakj askdj alk asdkj a aslkda askl dask dad  askdaj sdlkad a asldk"
                android:layout_gravity="left"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>