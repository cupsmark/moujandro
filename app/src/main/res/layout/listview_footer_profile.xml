<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/profile_bottom_field"
        android:id="@+id/profile_table_relative_maps"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp">

        <fragment
            android:id="@+id/map"
            android:name="com.android.mouj.view.ViewSupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/maps_relative_topbar"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_relative_tabdetail_button_edit"
        android:background="@color/v1_profile_basegreen"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/v1_icon_profile_tabdetail_edit"
                android:id="@+id/profile_imageview_tabdetail_icon_edit"/>

            <com.android.mouj.view.ViewText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v1_profile_table_button_edit"
                android:textColor="@color/base_white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/profile_textview_tabdetail_caption_edit"/>

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>